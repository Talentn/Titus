<h1 class="text-center my-5">Monthly Expense Stats</h1>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Sort by Amount (High to Low)", stats_expenses_path(sort: 'desc'), class: "btn btn-primary me-2" %>
    <%= link_to "Sort by Amount (Low to High)", stats_expenses_path(sort: 'asc'), class: "btn btn-secondary me-2" %>
    <%= link_to 'Back to Expenses', expenses_path, class: "btn btn-warning" %> <!-- Back button to the index -->
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Month</th>
        <th>Total Expense Amount (€)</th>
      </tr>
    </thead>
    <tbody>
      <% @monthly_stats.each do |month, total_amount| %>
        <tr>
          <td><%= month %></td>
          <td><%= number_to_currency(total_amount, unit: "€", format: "%n %u") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
